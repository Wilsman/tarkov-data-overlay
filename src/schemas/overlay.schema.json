{
  "$id": "overlay.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": false,
  "description": "Root schema for compiled overlay output",
  "properties": {
    "$meta": {
      "description": "Build metadata",
      "properties": {
        "generated": {
          "format": "date-time",
          "type": "string"
        },
        "sha256": {
          "type": "string"
        },
        "version": {
          "type": "string"
        }
      },
      "required": ["version", "generated"],
      "type": "object"
    },
    "editions": {
      "$ref": "edition.schema.json"
    },
    "hideout": {
      "description": "Hideout corrections",
      "type": "object"
    },
    "items": {
      "description": "Item corrections",
      "type": "object"
    },
    "itemsAdd": {
      "$ref": "item-additions.schema.json"
    },
    "storyChapters": {
      "$ref": "story-chapter.schema.json"
    },
    "tasks": {
      "$ref": "task-override.schema.json"
    },
    "tasksAdd": {
      "$ref": "task-additions.schema.json"
    },
    "traders": {
      "description": "Trader corrections",
      "type": "object"
    },
    "modes": {
      "description": "Game-mode-specific overrides applied on top of shared corrections",
      "type": "object",
      "properties": {
        "regular": {
          "type": "object",
          "properties": {
            "tasks": { "$ref": "task-override.schema.json" },
            "tasksAdd": { "$ref": "task-additions.schema.json" }
          },
          "additionalProperties": false
        },
        "pve": {
          "type": "object",
          "properties": {
            "tasks": { "$ref": "task-override.schema.json" },
            "tasksAdd": { "$ref": "task-additions.schema.json" }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "title": "Tarkov Data Overlay",
  "type": "object"
}
