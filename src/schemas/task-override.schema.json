{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "task-override.schema.json",
  "title": "Task Override",
  "description": "Schema for task corrections in tarkov-data-overlay",
  "type": "object",
  "additionalProperties": {
    "type": "object",
    "properties": {
      "minPlayerLevel": {
        "type": "integer",
        "minimum": 1,
        "maximum": 79,
        "description": "Minimum PMC level required to start the task"
      },
      "name": {
        "type": "string",
        "description": "Task name override"
      },
      "wikiLink": {
        "type": "string",
        "description": "Corrected wiki link URL"
      },
      "disabled": {
        "type": "boolean",
        "description": "Mark task as disabled/removed from standard gameplay. Consumers should filter out disabled tasks."
      },
      "map": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" }
        },
        "required": ["id", "name"],
        "additionalProperties": false,
        "description": "Map where the task takes place"
      },
      "kappaRequired": {
        "type": "boolean",
        "description": "Whether task is required for Kappa container"
      },
      "lightkeeperRequired": {
        "type": "boolean",
        "description": "Whether task is required for Lightkeeper access"
      },
      "objectives": {
        "type": "object",
        "description": "ID-keyed objective patches",
        "additionalProperties": {
          "type": "object",
          "properties": {
            "count": { "type": "integer", "minimum": 1 },
            "description": { "type": "string" },
            "maps": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "id": { "type": "string" },
                  "name": { "type": "string" }
                },
                "required": ["id", "name"]
              }
            }
          },
          "additionalProperties": true
        }
      },
      "taskRequirements": {
        "type": "array",
        "description": "Task prerequisites/requirements",
        "items": {
          "type": "object",
          "properties": {
            "task": {
              "type": "object",
              "properties": {
                "id": { "type": "string" },
                "name": { "type": "string" }
              },
              "required": ["id", "name"],
              "additionalProperties": false
            }
          },
          "required": ["task"],
          "additionalProperties": true
        }
      },
      "experience": {
        "type": "integer",
        "minimum": 0,
        "description": "Experience points rewarded on task completion"
      },
      "finishRewards": {
        "type": "object",
        "description": "Rewards given on task completion",
        "properties": {
          "items": {
            "type": "array",
            "description": "Item rewards (including money)",
            "items": {
              "type": "object",
              "properties": {
                "item": {
                  "type": "object",
                  "properties": {
                    "id": { "type": "string" },
                    "name": { "type": "string" }
                  },
                  "required": ["id", "name"]
                },
                "count": { "type": "integer", "minimum": 1 }
              },
              "required": ["item", "count"]
            }
          }
        }
      }
    },
    "additionalProperties": true
  }
}
