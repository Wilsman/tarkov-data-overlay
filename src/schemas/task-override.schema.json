{
  "$id": "task-override.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": {
    "additionalProperties": true,
    "properties": {
      "disabled": {
        "description": "Mark task as disabled/removed from standard gameplay. Consumers should filter out disabled tasks.",
        "type": "boolean"
      },
      "objectivesAdd": {
        "type": "array",
        "description": "Objective additions for missing API objectives",
        "items": {
          "type": "object",
          "properties": {
            "id": { "type": "string" },
            "type": { "type": "string" },
            "containsAll": {
              "items": {
                "properties": {
                  "id": { "type": "string" },
                  "name": { "type": "string" },
                  "shortName": { "type": "string" }
                },
                "required": ["id", "name"],
                "type": "object"
              },
              "type": "array"
            },
            "count": { "type": "integer", "minimum": 1 },
            "description": { "type": "string" },
            "foundInRaid": { "type": "boolean" },
            "item": {
              "properties": {
                "id": { "type": "string" },
                "name": { "type": "string" },
                "shortName": { "type": "string" }
              },
              "required": ["id", "name"],
              "type": "object"
            },
            "maps": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "id": { "type": "string" },
                  "name": { "type": "string" }
                },
                "required": ["id", "name"]
              }
            },
            "markerItem": {
              "properties": {
                "id": { "type": "string" },
                "name": { "type": "string" },
                "shortName": { "type": "string" }
              },
              "required": ["id", "name"],
              "type": "object"
            },
            "items": {
              "type": "array",
              "description": "Objective items can be referenced by name only when adding missing objectives.",
              "items": {
                "type": "object",
                "properties": {
                  "id": { "type": "string" },
                  "name": { "type": "string" },
                  "shortName": { "type": "string" }
                },
                "required": ["name"]
              }
            },
            "questItem": {
              "properties": {
                "id": { "type": "string" },
                "name": { "type": "string" },
                "shortName": { "type": "string" }
              },
              "required": ["id", "name"],
              "type": "object"
            },
            "requiredKeys": {
              "items": {
                "items": {
                  "properties": {
                    "id": { "type": "string" },
                    "name": { "type": "string" },
                    "shortName": { "type": "string" }
                  },
                  "required": ["id", "name"],
                  "type": "object"
                },
                "type": "array"
              },
              "type": "array"
            },
            "useAny": {
              "items": {
                "properties": {
                  "id": { "type": "string" },
                  "name": { "type": "string" },
                  "shortName": { "type": "string" }
                },
                "required": ["id", "name"],
                "type": "object"
              },
              "type": "array"
            },
            "usingWeapon": {
              "items": {
                "properties": {
                  "id": { "type": "string" },
                  "name": { "type": "string" },
                  "shortName": { "type": "string" }
                },
                "required": ["id", "name"],
                "type": "object"
              },
              "type": "array"
            },
            "usingWeaponMods": {
              "items": {
                "items": {
                  "properties": {
                    "id": { "type": "string" },
                    "name": { "type": "string" },
                    "shortName": { "type": "string" }
                  },
                  "required": ["id", "name"],
                  "type": "object"
                },
                "type": "array"
              },
              "type": "array"
            }
          },
          "required": ["id", "description"],
          "additionalProperties": false
        }
      },
      "experience": {
        "description": "Experience points rewarded on task completion",
        "minimum": 0,
        "type": "integer"
      },
      "finishRewards": {
        "description": "Rewards given on task completion",
        "properties": {
          "items": {
            "description": "Item rewards (including money)",
            "items": {
              "properties": {
                "count": {
                  "minimum": 1,
                  "type": "integer"
                },
                "item": {
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "name": {
                      "type": "string"
                    }
                  },
                  "required": ["id", "name"],
                  "type": "object"
                }
              },
              "required": ["item", "count"],
              "type": "object"
            },
            "type": "array"
          },
          "traderStanding": {
            "description": "Trader reputation rewards",
            "items": {
              "properties": {
                "standing": {
                  "type": "number"
                },
                "trader": {
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "name": {
                      "type": "string"
                    }
                  },
                  "required": ["name"],
                  "type": "object"
                }
              },
              "required": ["trader", "standing"],
              "type": "object"
            },
            "type": "array"
          }
        },
        "type": "object"
      },
      "kappaRequired": {
        "description": "Whether task is required for Kappa container",
        "type": "boolean"
      },
      "lightkeeperRequired": {
        "description": "Whether task is required for Lightkeeper access",
        "type": "boolean"
      },
      "map": {
        "additionalProperties": false,
        "description": "Map where the task takes place",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          }
        },
        "required": ["id", "name"],
        "type": "object"
      },
      "minPlayerLevel": {
        "description": "Minimum PMC level required to start the task",
        "maximum": 79,
        "minimum": 1,
        "type": "integer"
      },
      "name": {
        "description": "Task name override",
        "type": "string"
      },
      "objectives": {
        "additionalProperties": {
          "additionalProperties": true,
          "properties": {
            "containsAll": {
              "items": {
                "properties": {
                  "id": {
                    "type": "string"
                  },
                  "name": {
                    "type": "string"
                  },
                  "shortName": {
                    "type": "string"
                  }
                },
                "required": ["id", "name"],
                "type": "object"
              },
              "type": "array"
            },
            "count": {
              "minimum": 1,
              "type": "integer"
            },
            "description": {
              "type": "string"
            },
            "foundInRaid": {
              "type": "boolean"
            },
            "item": {
              "properties": {
                "id": {
                  "type": "string"
                },
                "name": {
                  "type": "string"
                },
                "shortName": {
                  "type": "string"
                }
              },
              "required": ["id", "name"],
              "type": "object"
            },
            "items": {
              "items": {
                "properties": {
                  "id": {
                    "type": "string"
                  },
                  "name": {
                    "type": "string"
                  },
                  "shortName": {
                    "type": "string"
                  }
                },
                "required": ["id", "name"],
                "type": "object"
              },
              "type": "array"
            },
            "maps": {
              "items": {
                "properties": {
                  "id": {
                    "type": "string"
                  },
                  "name": {
                    "type": "string"
                  }
                },
                "required": ["id", "name"],
                "type": "object"
              },
              "type": "array"
            },
            "markerItem": {
              "properties": {
                "id": {
                  "type": "string"
                },
                "name": {
                  "type": "string"
                },
                "shortName": {
                  "type": "string"
                }
              },
              "required": ["id", "name"],
              "type": "object"
            },
            "questItem": {
              "properties": {
                "id": {
                  "type": "string"
                },
                "name": {
                  "type": "string"
                },
                "shortName": {
                  "type": "string"
                }
              },
              "required": ["id", "name"],
              "type": "object"
            },
            "requiredKeys": {
              "items": {
                "items": {
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "name": {
                      "type": "string"
                    },
                    "shortName": {
                      "type": "string"
                    }
                  },
                  "required": ["id", "name"],
                  "type": "object"
                },
                "type": "array"
              },
              "type": "array"
            },
            "useAny": {
              "items": {
                "properties": {
                  "id": {
                    "type": "string"
                  },
                  "name": {
                    "type": "string"
                  },
                  "shortName": {
                    "type": "string"
                  }
                },
                "required": ["id", "name"],
                "type": "object"
              },
              "type": "array"
            },
            "usingWeapon": {
              "items": {
                "properties": {
                  "id": {
                    "type": "string"
                  },
                  "name": {
                    "type": "string"
                  },
                  "shortName": {
                    "type": "string"
                  }
                },
                "required": ["id", "name"],
                "type": "object"
              },
              "type": "array"
            },
            "usingWeaponMods": {
              "items": {
                "items": {
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "name": {
                      "type": "string"
                    },
                    "shortName": {
                      "type": "string"
                    }
                  },
                  "required": ["id", "name"],
                  "type": "object"
                },
                "type": "array"
              },
              "type": "array"
            }
          },
          "type": "object"
        },
        "description": "ID-keyed objective patches",
        "type": "object"
      },
      "taskRequirements": {
        "description": "Task prerequisites/requirements",
        "items": {
          "additionalProperties": true,
          "properties": {
            "task": {
              "additionalProperties": false,
              "properties": {
                "id": {
                  "type": "string"
                },
                "name": {
                  "type": "string"
                }
              },
              "required": ["id", "name"],
              "type": "object"
            }
          },
          "required": ["task"],
          "type": "object"
        },
        "type": "array"
      },
      "wikiLink": {
        "description": "Corrected wiki link URL",
        "type": "string"
      }
    },
    "type": "object"
  },
  "description": "Schema for task corrections in tarkov-data-overlay",
  "title": "Task Override",
  "type": "object"
}
