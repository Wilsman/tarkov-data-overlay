{
  "$id": "item-additions.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": {
    "additionalProperties": true,
    "properties": {
      "id": {
        "description": "Tarkov.dev item ID",
        "type": "string"
      },
      "name": {
        "description": "Item name",
        "type": "string"
      },
      "shortName": {
        "description": "Item short name",
        "type": "string"
      },
      "description": {
        "description": "Item description",
        "type": "string"
      }
    },
    "required": ["id", "name"],
    "type": "object"
  },
  "description": "New items to add to the overlay",
  "title": "Item Additions",
  "type": "object"
}
